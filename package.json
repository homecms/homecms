{
  "name": "@rowanmanning/indieweb-cms",
  "version": "0.0.0",
  "private": true,
  "description": "A CMS for a simple IndieWeb website",
  "keywords": [
    "cms",
    "indieweb"
  ],
  "author": "Rowan Manning (https://rowanmanning.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/rowanmanning/indieweb-cms.git"
  },
  "homepage": "https://github.com/rowanmanning/indieweb-cms",
  "bugs": "https://github.com/rowanmanning/indieweb-cms/issues",
  "license": "GPL-3.0",
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node .",
    "start:dev": "nodemon . | pino-pretty --messageKey message",
    "verify": "npm run verify:eslint && npm run verify:types",
    "verify:eslint": "eslint .",
    "verify:types": "tsc --noEmit --project ./jsconfig.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@rowanmanning/eslint-config": "^5.0.2",
    "eslint": "^8.27.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "typescript": "^4.8.4"
  },
  "volta": {
    "node": "18.12.1",
    "npm": "8.19.3"
  },
  "nodemonConfig": {
    "ext": "js",
    "ignore": [
      "test/*"
    ]
  }
}

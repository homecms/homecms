{
  "name": "@homecms/root",
  "version": "0.0.0",
  "private": true,
  "description": "A CMS for a simple IndieWeb website",
  "keywords": [
    "cms",
    "indieweb"
  ],
  "author": "Rowan Manning (https://rowanmanning.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/rowanmanning/homecms.git"
  },
  "homepage": "https://github.com/rowanmanning/homecms",
  "bugs": "https://github.com/rowanmanning/homecms/issues",
  "license": "GPL-3.0",
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "homecms start",
    "start:dev": "nodemon --exec 'homecms start' .",
    "create:db": "npm run create:db:dev && npm run create:db:test",
    "create:db:dev": "createdb homecms || true",
    "create:db:test": "createdb homecms-test || true",
    "create:migration": "homecms create:migration",
    "create:seed": "homecms create:seed",
    "migrate": "npm run migrate:latest",
    "migrate:latest": "homecms migrate:latest",
    "migrate:up": "homecms migrate:up",
    "migrate:down": "homecms migrate:down",
    "seed": "npm run seed:add",
    "seed:add": "homecms seed:add",
    "verify": "npm run verify:eslint && npm run verify:types",
    "verify:eslint": "eslint .",
    "verify:types": "tsc --noEmit --project ./jsconfig.json",
    "test": "npm run test:coverage && npm run test:end-to-end",
    "test:unit": "mocha '**/test/unit/**/*.test.js'",
    "test:coverage": "nyc npm run test:unit",
    "test:end-to-end": "playwright test",
    "prepare": "husky install"
  },
  "dependencies": {
    "homecms": "^0.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@playwright/test": "^1.27.1",
    "@rowanmanning/eslint-config": "^5.0.2",
    "chai": "^4.3.7",
    "eslint": "^8.27.0",
    "husky": "^8.0.2",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "pino-pretty": "^9.1.1",
    "playwright": "^1.27.1",
    "testdouble": "^3.16.6",
    "typescript": "^4.8.4"
  },
  "volta": {
    "node": "18.12.1",
    "npm": "8.19.3"
  },
  "nodemonConfig": {
    "ext": "js",
    "ignore": [
      "test/*"
    ]
  },
  "nyc": {
    "eager": true,
    "check-coverage": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "reporter": [
      "html",
      "text"
    ],
    "report-dir": "test/output/coverage",
    "temp-dir": "test/output/nyc"
  },
  "mocha": {
    "timeout": 10000
  }
}

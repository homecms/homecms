
{% layout 'admin/layouts/default' %}

{% block title -%}
	Login
{%- endblock %}

{% block content %}

	<main>
		<h1>Login</h1>
		<p>This is the Home CMS login page.</p>

		{% if loginForm.success %}
			<div role="alert" data-test-id="login-form__success">
				<p>
					If "{{ loginForm.email }}" is a valid user email address,
					we sent an email with a link to log in
				</p>
			</div>
		{% endif %}

		<form data-test-id="login-form" method="post">
			<div>
				<label for="email">Email</label>
				<input id="email" name="email" type="email" required />
			</div>
			<button type="submit">Login</button>
		</form>
	</main>

{% endblock %}


{% layout 'layouts/default' %}

{% block title -%}
	Error {{ error.statusCode }}: {{ error.statusMessage }}
{%- endblock %}

{% block content %}

	<main>
		<h1>Error {{ error.statusCode }}</h1>
		<p>{{ error.message }}</p>

		{% if error.stack %}
			<pre>{{ error.stack }}</pre>
		{% endif %}
	</main>

{% endblock %}
